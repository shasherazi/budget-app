<div class="forgot-password flex flex-col justify-center items-center gap-2">

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "flex flex-col w-full gap-3"  }) do |f| %>
      <div class="nav flex justify-center items-center bg-[#3778c2] py-2 mb-2 w-full">
      <h2 class="text-2xl text-gray-100">FORGOT PASSWORD</h2>
      <div class="actions absolute left-3">
        <a href="/" class="text-white cursor-pointer">Back</a>
      </div>
    </div>

  <div class="field w-full px-2">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "w-full" %>
  </div>

  <div class="actions text-center">
    <%= f.submit "Send me reset password instructions", class: "bg-[#3778c2] text-white p-2.5 rounded" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  <%= render "devise/shared/error_messages", resource: resource %>
</div>
